@model IEnumerable<CSIT314BCE.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<h2>Admin Control Panel</h2>

<div class="row">
    <div class="col-md-10">Search User</div>
    <div class="col-md-2">@Html.ActionLink("Create User", "CreateUser", "Admin", new { @class = "btn btn-success" })</div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LockoutEnabled)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LockoutEndDateUtc)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            Role
                        </td>
                        <td>
                            @{
                                if (item.LockoutEnabled == true)
                                {
                                    <div class="form-check disabled">
                                        <input class="form-check-input" type="checkbox" checked="" disabled>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-check disabled">
                                        <label class="form-check-label">
                                            <input class="form-check-input" type="checkbox" value="" disabled>
                                        </label>
                                    </div>
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LockoutEndDateUtc)
                        </td>
                        <td>

                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                            <!-- @Html.ActionLink("Delete", "Delete", new { id = item.Id }) -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
